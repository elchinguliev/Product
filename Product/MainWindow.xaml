        </Button>
        <Label Content="Chicken" Canvas.Left="677" Canvas.Top="336" Name="chickenLbl" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="3.079,2.36"></Label>
        <Button Content="+" Name="chickenPlusBtn" Canvas.Left="739" Canvas.Top="342" HorizontalAlignment="Left" VerticalAlignment="Top"></Button>


        <Button Name="basketbtn" Canvas.Top="206" Canvas.Left="24" >
            <Image Source="https://www.candyconceptsinc.com/assets/images/Large-Shopping-Baskets-red.jpg" Width="71"></Image>
        </Button>
